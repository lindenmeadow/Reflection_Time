<h1>Reflections</h1>

<table>
  <thead>
    <tr>
      <th>Student name</th>
      <th>Block</th>
      <th>Teacher name</th>
      <th>Project name</th>
      <th>Project type</th>
      <th>Conduct</th>
      <th>Leadership</th>
      <th>Work</th>
      <th>Creativity</th>
      <th>Collaboration</th>
      <th>Thinking</th>
      <th>Communication</th>
      <th>Comments</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reflections.each do |reflection| %>
      <tr>
        <td><%= reflection.student_name %></td>
        <td><%= reflection.block %></td>
        <td><%= reflection.teacher_name %></td>
        <td><%= reflection.project_name %></td>
        <td><%= reflection.project_type %></td>
        <td><%= reflection.conduct %></td>
        <td><%= reflection.leadership %></td>
        <td><%= reflection.work %></td>
        <td><%= reflection.creativity %></td>
        <td><%= reflection.collaboration %></td>
        <td><%= reflection.thinking %></td>
        <td><%= reflection.communication %></td>
        <td><%= reflection.comments %></td>
        <td><%= reflection.user_id %></td>
        <td><%= link_to 'Show', reflection %></td>
        <td><%= link_to 'Edit', edit_reflection_path(reflection) %></td>
        <td><%= link_to 'Destroy', reflection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

